  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/images/misc/tigris-river-1.jpg" style="height:500px" class="d-block w-100" alt="Baghdad" loading="lazy">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="text-white" style="background-color: #7800009c;">Baghdad Beginnings</h1>
          <h1 class="text-white" style="background-color: #7800009c;">A journey rooted in history...</h1>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/images/misc/amman-jordan-1.jpg" style="height:500px" class="d-block w-100" alt="Amman" loading="lazy">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="text-white" style="background-color: #7800009c;">Amman Expansion</h1>
          <h1 class="text-white" style="background-color: #7800009c;">A chapter of innovation...</h1>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/images/misc/sandiego-3.jpg" style="height:500px" class="d-block w-100" alt="San Diego" loading="lazy">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="text-white" style="background-color: #7800009c;">San Diego Frontier</h1>
          <h1 class="text-white" style="background-color: #7800009c;">Blending heritage with modernity...</h1>
        </div>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
