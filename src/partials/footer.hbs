        </div>

        {{!-- Second Col --}}
        <div class="col-md-4 d-flex flex-column mb-md-0 py-4">
            <!-- Order Button -->
            <button onclick="window.open('{{menu}}', '_blank')" class="btn btn-danger fs-5" style="min-width: 225px;">
                ORDER NOW
            </button>
        </div>

        <!-- Terms -->
        <div class="col-md-4 d-flex flex-column align-items-center mb-md-0">
            <p>
                <!-- Terms & Privacy Policy -->
                <a href="/privacy">PRIVACY</a> |
                <a href="/terms">TERMS</a>
                <br>
                <!-- Copyright -->
                &copy; {{year}} <a href="{{url}}">{{company}}.</a>
            </p>
        </div>

    </div>

    <button aria-label="back to top" class="back-to-top" onclick="window.scrollTo({ top: 0, behavior: 'smooth' });">
        <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-arrow-up-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 0 0 8a8 8 0 0 0 16 0m-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707z"/>
