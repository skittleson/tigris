{{!-- Restaurant Info --}}
<div class="container" style="max-width: 100%;">
  <div class="row">
    <div class="col-md-4 d-flex flex-column align-items-center mb-4 mb-md-0">
      <h3 class="mb-3" style="white-space: nowrap;">HOURS OF OPERATION</h3>
      <div class="hours-list">
        <p><span class="day">Monday:</span> <span class="time ml-2">10 AM - 7 PM</span></p>
        <p><span class="day">Tuesday:</span> <span class="time ml-2">10 AM - 7 PM</span></p>
        <p><span class="day">Wednesday:</span> <span class="time ml-2">10 AM - 7 PM</span></p>
        <p><span class="day">Thursday:</span> <span class="time ml-2">10 AM - 7 PM</span></p>
        <p><span class="day">Friday:</span> <span class="time ml-2">10 AM - 7 PM</span></p>
        <p><span class="day">Saturday:</span> <span class="time ml-2">10 AM - 7 PM</span></p>
        <p><span class="day">Sunday:</span> <span class="time ml-2">Closed</span></p>
      </div>
    </div>


    <div class="col-md-4 d-flex flex-column align-items-center mb-4 mb-md-0">
      <h3 class="mb-3">INFORMATION</h3>
      <div class="text-left">
        <p>
          <a href="https://maps.google.com/maps/dir//Tigris+Mediterranean+Grille+5285+Overland+Ave+%23102+San+Diego,+CA+92123/@32.8306151,-117.1304295,14z/data=!4m5!4m4!1m0!1m2!1m1!1s0x80dbffb46eb566e1:0x39c5d62b7baaf06"><i class="bi bi-geo-alt-fill"></i> 5285 Overland Ave #102
          <br>
          San Diego, California 92123
          </a>
        </p>
        <p>
          <a href="tel:{{phone}}"><i class="bi bi-telephone-fill"></i> Phone: {{phone}}</a>
        </p>
        <p>
          <a href="mailto:{{email}}" style="white-space: nowrap;"><i class="bi bi-envelope-fill"></i> Email: {{email}}</a>
        </p>
      </div>
    </div>


    <div class="col-md-4 d-flex flex-column align-items-center">
      <h3 class="mb-3">CONTACT</h3>
      <form style="width:90%" id="contactForm" method="POST" action="/submit-form">
          <input type="text" class="mb-3 form-control custom-input" id="contact-first-name" name="contact-first-name" placeholder="First Name" required>
          <input type="text" class="mb-3 form-control custom-input" id="contact-last-name" name="contact-last-name" placeholder="Last Name" required>
          <input type="email" class="mb-3 form-control custom-input" id="contact-email" name="contact-email" placeholder="Email Address" required>
          <input type="tel" class="mb-3 form-control custom-input" id="contact-number" name="contact-number" placeholder="Phone Number" required>
          <textarea class="mb-4 form-control custom-input" id="message" rows="3" name="message" placeholder="Message" required></textarea>
        <center><button type="submit" class="btn btn-danger p-3">SUBMIT</button></center>
      </form>
    </div>

  </div>
</div>


{{> footer}}