{{> header}}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Catering Service",
  "name": "Catering by {{company}}",
  "description": "Professional catering services for events, weddings, and corporate functions. We offer a variety of cuisines and customizable menus.",
  "url": "{{url}}/catering",
  "provider": {
    "@type": "Organization",
    "name": "{{company}}",
    "url": "{{url}}",
    "logo": "{{url}}/logo.png",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "{{phone}}",
      "contactType": "Catering Inquiries",
      "email": "{{email}}",
      "areaServed": ["{{city}}"],
      "availableLanguage": ["English", "Spanish"]
    },
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "{{city}}",
      "addressRegion": "{{state}}",
      "postalCode": "{{zip}}",
      "streetAddress": "{{address}}"
    },
  },
  "areaServed": ["{{city}}"],
  "availableLanguage": ["English", "Spanish"],
  "menu": "{{menu}}",
  "serviceOutput": "Event Catering",
  "serviceAudience": {
    "@type": "Audience",
    "audienceType": ["Wedding", "Corporate", "Private Events"]
  },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "USD",
    "price": "Varies",
    "eligibleRegion": ["{{city}}"],
  }
}
</script>
{{> navbar}}

<div class="jumbotron jumbotron-fluid jumbotron-beans-menu">
  <div class="container text-center">
    <h2 class="display-4 text-center">Parties & Catering</h2>
  </div>
</div>

<div class="container menu text-center">
   <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
    <h6 class="display-6">Off-site catering?</h6>
    <p>
      Ready to elevate your next event? Let {{company}} bring the magic to you. From office luncheons to the most unforgettable celebrations, we craft culinary experiences that tantalize and delight. 
      </p>
      <p>Can’t make it to us? No problem—we’ll come to you, wherever your special moment awaits. Choose from personalized catering options or indulge in bulk orders of our signature dishes, tailored just for you.
    </p>
    
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#inquireModal">
      Inquire Now
    </button>
  </div>
  </div>
</div>

<!-- Modal --> {{!--TODO: handle submission --}}
<div class="modal fade" id="inquireModal" tabindex="-1" aria-labelledby="inquireModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="inquireModalLabel">CONTACT US ABOUT YOUR PRIVATE EVENT</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="cater-email" class="form-label">Email <span class="required-indicator">*</span></label>
            <input type="email" class="form-control" id="cater-email" required placeholder="Email">
          </div>
          <div class="mb-3">
            <label for="cater-firstname" class="form-label">First Name <span class="required-indicator">*</span></label>
            <input type="text" class="form-control" id="cater-firstname" required placeholder="First Name">
          </div>
          <div class="mb-3">
            <label for="cater-lastname" class="form-label">Last Name <span class="required-indicator">*</span></label>
            <input type="text" class="form-control" id="cater-lastname" required placeholder="Last Name">
          </div>
          <div class="mb-3">
            <label for="cater-phone" class="form-label">Phone Number <span class="required-indicator">*</span></label>
            <input type="tel" class="form-control" id="cater-phone" required placeholder="Phone Number">
          </div>
          <div class="mb-3">
            <label for="cater-company" class="form-label">Company <span class="required-indicator">*</span></label>
            <input type="text" class="form-control" id="cater-company" required placeholder="Company">
          </div>
          <div class="mb-3">
            <label for="cater-date" class="form-label">Event Date <span class="required-indicator">*</span></label>
            <input type="date" class="form-control" id="cater-date" required placeholder="Event Date">
          </div>
          <div class="mb-3">
            <label for="cater-start-time" class="form-label">Start Time <span class="required-indicator">*</span></label>
            <input type="time" class="form-control" id="cater-start-time" required placeholder="Start Time">
          </div>
          <div class="mb-3">
            <label for="cater-end-time" class="form-label">End Time <span class="required-indicator">*</span></label>
            <input type="time" class="form-control" id="cater-end-time" required placeholder="End Time">
          </div>
          <div class="mb-3">
            <label for="cater-num-people" class="form-label">Number of People <span class="required-indicator">*</span></label>
            <input type="number" class="form-control" id="cater-num-people" required placeholder="Number of People">
          </div>
          <div class="mb-3">
            <label for="cater-message" class="form-label">Briefly describe your event <span class="required-indicator">*</span></label>
            <textarea class="form-control" id="cater-message" rows="3" required placeholder="Briefly describe your event"></textarea>
          </div>
          <div class="mb-3">
            <label for="cater-moreinfo" class="form-label">Additional Information</span></label>
            <textarea class="form-control" id="cater-moreinfo" rows="3" placeholder="Additional Information"></textarea>
          </div>
          <button type="submit" class="btn d-flex mx-auto btn-outline-danger">Send Inquiry</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{> footer}}

